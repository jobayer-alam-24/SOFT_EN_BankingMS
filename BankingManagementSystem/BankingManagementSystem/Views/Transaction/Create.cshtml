@model BankingManagementSystem.Models.Transaction

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WidthdrawBalance" class="control-label"></label>
                <input asp-for="WidthdrawBalance" class="form-control" />
                <span asp-validation-for="WidthdrawBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepositBalance" class="control-label"></label>
                <input asp-for="DepositBalance" class="form-control" />
                <span asp-validation-for="DepositBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionStatus" class="control-label"></label>
                <select asp-for="TransactionStatus" asp-items="@Html.GetEnumSelectList<TransactionStatus>()"  class="form-control"></select>
                <span asp-validation-for="TransactionStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
